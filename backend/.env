# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=24h

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/banking-assistant

# OpenAI Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4

# Bankinter PSD2 API Configuration
BANKINTER_CLIENT_ID=your-client-id
BANKINTER_CLIENT_SECRET=your-client-secret
BANKINTER_REDIRECT_URI=http://localhost:3000/api/auth/callback
BANKINTER_NOK_REDIRECT_URI=http://localhost:3000/api/auth/callback/error

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Cors Configuration
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:3000
